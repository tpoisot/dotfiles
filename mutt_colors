# vim: filetype=muttrc

color sidebar_new green default

# Header
color hdrdefault cyan default

# Specific headers
color header green default "Subject: " 
color header green default "From: " 

# Attachment within the message
color attachment magenta default 

# Levels of quoted previous messages
color quoted blue default 
color quoted1 green default
color quoted2 magenta default
color quoted3 cyan default 

# Messages
color error red default # error messages 
color message green default # message informational messages 

color indicator default white # indicator for the "current message" 

color status cyan default # status lines in the folder index sed for the mini-help line 

color tree blue default # the "tree" display of threads within the folder index 

color search brightgreen default # search matches found with search within the internal pager 
color markers black default # The markers indicate a wrapped line 
color index black blue '~N' # unread, new
color index black red '~D' # flagged for deletion
color index black green '~T' # tagged
color index black magenta '~F' # tagged
color index cyan default '~v' # tagged
color index brightcyan default '~v~(~N)' # tagged

# identifies email addresses 
color body blue default [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+

# identifies URLs 
color body green default (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+
