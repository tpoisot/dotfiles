# vim: filetype=muttrc

color sidebar_new   brightblue     default

color hdrdefault    white          default
color header        brightyellow   default "Subject: "
color header        brightyellow   default "From: "

color error         red            default
color message       green          default

color tree          white  default

color attachment    brightmagenta  default
color status        blue           default
color search        brightcyan     default

color index         brightdefault        default '~U'
color index         white                default '~R'
color index         brightyellow               default '~F'
color index         brightred           default '~T'
color index         black          default '~D'


color index brightblack  default "~v~(!~N)~(!~F)" # collapsed thread with no New or Flagged
color index brightyellow     default "~v~(~F)~(!~N)"  # collapsed thread with Flagged but no New
color index brightblue   default "~v~(~N)"        # collapsed thread with New

# set arrow_cursor
color indicator     brightdefault       red
